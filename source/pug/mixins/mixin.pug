mixin picture(path='path', format='jpg', description='bla-bla-bla')
	if(format === 'jpg')
		picture(data-src=path)
			source(media="(min-width: 1024px)" srcset=`${'A0'}-large@2x.webp 2x, ${'A0'}-large.webp 1x`)
			source(media="(min-width: 1024px)" srcset=`${'A0'}-large@2x.jpg 2x, ${'A0'}-large.jpg 1x`)
			source(media="(min-width: 565px)" srcset=`${'A0'}-medium@2x.webp 2x, ${'A0'}-medium.webp 1x`)
			source(media="(min-width: 565px)" srcset=`${'A0'}-medium@2x.jpg 2x, ${'A0'}-medium.jpg 1x`)
			source(media="(min-width: 320px)" srcset=`${'A0'}-small@2x.webp 2x, ${'A0'}-small.webp 1x`)
			source(media="(min-width: 320px)" srcset=`${'A0'}-small@2x.jpg 2x, ${'A0'}-small.jpg 1x`)
			img(src=`${'A0'}.jpg` alt=`${description}` loading="lazy" )
	if(format === 'png')
		picture(data-src=path)
			source(media="(min-width: 1024px)" srcset=`${'A0'}-large@2x.webp 2x, ${'A0'}-large.webp 1x`)
			source(media="(min-width: 1024px)" srcset=`${'A0'}-large@2x.png 2x, ${'A0'}-large.png 1x`)
			source(media="(min-width: 565px)" srcset=`${'A0'}-medium@2x.webp 2x, ${'A0'}-medium.webp 1x`)
			source(media="(min-width: 565px)" srcset=`${'A0'}-medium@2x.png 2x, ${'A0'}-medium.png 1x`)
			source(media="(min-width: 320px)" srcset=`${'A0'}-small@2x.webp 2x, ${'A0'}-small.webp 1x`)
			source(media="(min-width: 320px)" srcset=`${'A0'}-small@2x.png 2x, ${'A0'}-small.png 1x`)
			img(src=`${'A0'}.png` alt=`${description}` loading="lazy" )

mixin svg(viewBox='0 0 50 50', width, height, href)
	svg(viewBox=viewBox width=width height=height)
		use(xlink:href=`img/sprite.svg#${href}`)

