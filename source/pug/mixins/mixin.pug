mixin picture(path='path', format='jpg', description='bla-bla-bla')
	if(format === 'jpg')
		picture
			source(media="(min-width: 1024px)" srcset=`${path}-large@2x.webp 2x, ${path}-large.webp 1x`)
			source(media="(min-width: 1024px)" srcset=`${path}-large@2x.jpg 2x, ${path}-large.jpg 1x`)
			source(media="(min-width: 565px)" srcset=`${path}-medium@2x.webp 2x, ${path}-medium.webp 1x`)
			source(media="(min-width: 565px)" srcset=`${path}-medium@2x.jpg 2x, ${path}-medium.jpg 1x`)
			source(media="(min-width: 320px)" srcset=`${path}-small@2x.webp 2x, ${path}-small.webp 1x`)
			source(media="(min-width: 320px)" srcset=`${path}-small@2x.jpg 2x, ${path}-small.jpg 1x`)
			img(src=`${path}.jpg` alt=`${description}` loading="lazy" ) 
	if(format === 'png')
		picture
			source(media="(min-width: 1024px)" srcset=`${path}-large@2x.webp 2x, ${path}-large.webp 1x`)
			source(media="(min-width: 1024px)" srcset=`${path}-large@2x.png 2x, ${path}-large.png 1x`)
			source(media="(min-width: 565px)" srcset=`${path}-medium@2x.webp 2x, ${path}-medium.webp 1x`)
			source(media="(min-width: 565px)" srcset=`${path}-medium@2x.png 2x, ${path}-medium.png 1x`)
			source(media="(min-width: 320px)" srcset=`${path}-small@2x.webp 2x, ${path}-small.webp 1x`)
			source(media="(min-width: 320px)" srcset=`${path}-small@2x.png 2x, ${path}-small.png 1x`)
			img(src=`${path}.png` alt=`${description}` loading="lazy" ) 